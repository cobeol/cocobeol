{
    "name": "cocobeol",
    "version": "0.1.0-alpha1",
    "main": "./public/electron.js",
    "homepage": "./",
    "private": true,
    "scripts": {
        "react-start": "craco start",
        "react-build": "craco build",
        "react-test": "craco test",
        "react-eject": "react-scripts eject",
        "start-renderer": "cross-env BROWSER=none npm run react-start",
        "start-main": "electron .",
        "compile-main": "tsc ./public/electron.ts",
        "start-main-after-renderer": "wait-on http://localhost:3000 && npm run start-main",
        "dev": "npm run compile-main && concurrently -n renderer, main 'npm:start-renderer' 'npm:start-main-after-renderer'",
        "pack": "npm run compile-main && npm run react-build && electron-builder --dir",
        "build": "npm run compile-main && npm run react-build && electron-builder build",
        "build:osx": "npm run build -- --mac",
        "build:linux": "npm run build -- --linux",
        "build:win": "npm run build -- --win",
        "predist": "npm run compile-main"
    },
    "build": {
        "productName": "Cocobeol",
        "appId": "com.cocobeol",
        "asar": true,
        "protocols": {
            "name": "Cocobeol",
            "schemes": [
                "cocobeol"
            ]
        },
        "mac": {
            "target": [
                "default"
            ]
        },
        "dmg": {
            "title": "tournant"
        },
        "win": {
            "target": [
                "zip",
                "nsis"
            ]
        },
        "linux": {
            "target": [
                "AppImage",
                "deb",
                "rpm",
                "zip",
                "tar.gz"
            ]
        },
        "nsis": {
            "oneClick": false,
            "allowToChangeInstallationDirectory": false,
            "installerLanguages": [
                "ko_KR"
            ],
            "language": "1042"
        },
        "directories": {
            "output": "dist/",
            "app": "."
        }
    },
    "dependencies": {
        "@craco/craco": "^7.1.0",
        "bootstrap": "^5.3.3",
        "electron-is-dev": "^3.0.1",
        "electron-router-dom": "^1.0.5",
        "react": "^18.3.1",
        "react-bootstrap": "^2.10.2",
        "react-dom": "^18.3.1",
        "react-native-listener": "^1.1.0",
        "react-router-dom": "^6.23.1",
        "react-scripts": "5.0.1",
        "styled-components": "^6.1.11"
    },
    "devDependencies": {
        "@types/jest": "^27.5.2",
        "@types/node": "^16.18.98",
        "@types/react": "^18.3.3",
        "@types/react-dom": "^18.3.0",
        "@types/react-native-listener": "^1.1.3",
        "@types/styled-components": "^5.1.34",
        "concurrently": "^8.2.2",
        "craco-alias": "^3.0.1",
        "cross-env": "^7.0.3",
        "electron": "^30.1.0",
        "electron-builder": "^24.13.3",
        "typescript": "^4.9.5",
        "wait-on": "^7.2.0",
        "web-vitals": "^2.1.4"
    },
    "eslintConfig": {
        "extends": [
            "react-app",
            "react-app/jest"
        ]
    },
    "browserslist": {
        "production": [
            ">0.2%",
            "not dead",
            "not op_mini all"
        ],
        "development": [
            "last 1 chrome version",
            "last 1 firefox version",
            "last 1 safari version"
        ]
    }
}
